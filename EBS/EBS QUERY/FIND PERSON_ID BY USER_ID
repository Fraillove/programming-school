

SELECT PPF.FULL_NAME ,PCR.PERSON_ID
FROM PER_CONTACT_RELATIONSHIPS PCR,PER_PEOPLE_F PPF
WHERE PPF.PERSON_ID=PCR.CONTACT_PERSON_ID
AND SYSDATE BETWEEN PPF.EFFECTIVE_START_DATE AND PPF.EFFECTIVE_END_DATE
AND PCR.PERSON_ID IN (SELECT EMPLOYEE_ID
FROM FND_USER FU
WHERE FU.USER_ID=FND_PROFILE.value('USER_ID')
);
